#bindsym $super+Shift+u border pixel 7


# Hyper bindings:
#bindsym $hyper+v exec clipmenu -fn Terminus:size=12
#bindsym $hyper+w exec i3-winmenu
#bindsym $hyper+s exec hypersel
bindsym $hyper+Left focus output left
bindsym $hyper+Right focus output right
bindsym $hyper+h focus output left
bindsym $hyper+l focus output right
bindsym $hyper+Shift+Left exec i3-msg "move container to output prev" && i3-msg "focus output prev"
bindsym $hyper+Shift+Right exec i3-msg "move container to output next" && i3-msg "focus output next"
bindsym $hyper+Shift+h exec i3-msg "move container to output prev" && i3-msg "focus output prev"
bindsym $hyper+Shift+l exec i3-msg "move container to output next" && i3-msg "focus output next"
bindsym $hyper+Up workspace prev
bindsym $hyper+Down workspace next
bindsym $hyper+k workspace prev
bindsym $hyper+j workspace next
bindsym $hyper+Shift+Up exec i3-msg "move container to workspace prev" && i3-msg "workspace prev"
bindsym $hyper+Shift+Down exec i3-msg "move container to workspace next" && i3-msg "workspace next"
bindsym $hyper+Shift+k exec i3-msg "move container to workspace prev" && i3-msg "workspace prev"
bindsym $hyper+Shift+j exec i3-msg "move container to workspace next" && i3-msg "workspace next"
bindsym $hyper+Return exec i3-new-workspace


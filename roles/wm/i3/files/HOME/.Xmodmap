clear lock
clear Lock
clear mod3
clear Mod3
clear Mod4
clear mod4

! Change Caps Lock into Hyper
keycode 66 = Hyper_L
add Mod3 = Hyper_L

! Swap control and hyper
!remove Control = Control_L
!keysym Control_L = Hyper_L
!keycode 66 = Control_L
!add control = Control_L
!add Mod3 = Hyper_L

! Change Control_R to Super_R
!remove Control = Control_R
!keysym Control_R = Super_R
!keycode 0x69 = Super_R

! Change Enter key to Hyper_R
!keysym Return = Hyper_R

! Put Return and Space to some unused keys so xcape can find them
! Check /usr/include/X11/keysymdef.h for more
!keysym Pause = Space
!keysym Sys_Req = Return

! Change Space key to Control_L
!keysym 0x20 = Control_L
!add Control = Control_L

! Change KP_Insert to Super_R
!keycode 90 = Super_R

! Change menu button to Super_R
!keycode 135 = Super_L NoSymbol Super_L

add Mod4 = Super_L Super_R

! Repair keypad keys in urxvt
!keycode 63 = KP_Multiply
!keycode 79 = Home KP_7
!keycode 80 = Up KP_8
!keycode 81 = Prior KP_9
!keycode 82 = KP_Subtract
!keycode 83 = Left KP_4
!keycode 84 = KP_5
!keycode 85 = Right KP_6
!keycode 86 = KP_Add
!keycode 87 = End KP_1
!keycode 88 = Down KP_2
!keycode 89 = Next KP_3
!keycode 90 = Insert KP_0
!keycode 91 = Delete KP_Decimal
!keycode 112 = Prior
!keycode 117 = Next
